<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <ImageView
        android:id="@+id/ic_logo_01"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_01" />

    <ImageView
        android:id="@+id/ic_logo_02"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/ic_logo_01"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_02" />

    <ImageView
        android:id="@+id/ic_logo_03"
        android:layout_width="89dp"
        android:layout_height="94dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/ic_logo_02"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_03" />

    <ImageView
        android:id="@+id/ic_logo_04"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo_01"
        app:srcCompat="@drawable/ic_logo_04" />

    <ImageView
        android:id="@+id/ic_logo_05"
        android:layout_width="89dp"
        android:layout_height="99dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/ic_logo_04"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo_02"
        app:srcCompat="@drawable/ic_logo_05" />

    <ImageView
        android:id="@+id/ic_logo_00"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:onClick="setTeamIconView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/ic_logo_05"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo_03"
        app:srcCompat="@drawable/ic_logo_00" />

    <Button
        android:id="@+id/btn_take_picture"
        android:layout_width="246dp"
        android:layout_height="64dp"
        android:layout_marginTop="120dp"
        android:text="load from phone"
        android:onClick="onClickCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo_05" />

</androidx.constraintlayout.widget.ConstraintLayout>